<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_discover">

    <fragment
        android:id="@+id/navigation_discover"
        android:name="com.example.foodnow.ui.discover.DiscoverFragment"
        android:label="@string/title_discover_tab"
        tools:layout="@layout/fragment_discover" />

    <fragment
        android:id="@+id/navigation_fav"
        android:name="com.example.foodnow.ui.dashboard.FavouritesFragment"
        android:label="@string/title_favourites_tab"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/navigation_random"
        android:name="com.example.foodnow.ui.notifications.RandomFragment"
        android:label="@string/title_random_tab"
        tools:layout="@layout/fragment_random" />
</navigation>