<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="12dp">

    <CheckBox
        android:id="@+id/filter_foodtype_rowitem_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/filter_foodtype_rowitem_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filter_foodtype_rowitem_switch"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fooditem_burger_24dp" />

    <TextView
        android:id="@+id/filter_foodtype_rowitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/filter_foodtype_rowitem_image"
        app:layout_constraintStart_toEndOf="@+id/filter_foodtype_rowitem_image"
        app:layout_constraintTop_toTopOf="@+id/filter_foodtype_rowitem_image" />

</androidx.constraintlayout.widget.ConstraintLayout>